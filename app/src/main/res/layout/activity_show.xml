<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.p4061644.tvcheck_redo.SearchActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rellayout1">

        <include layout="@layout/layout_bottom_navigation_view"
                 android:id="@+id/include2"/>

        <ImageView
            android:layout_width="250px"
            android:layout_height="350px"
            android:layout_marginStart="15dp"
            android:id="@+id/PosterView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/Rating_TV"
            android:layout_marginBottom="23dp"
            android:layout_above="@+id/season_list"
            android:layout_alignStart="@+id/Overview_TV"/>

        <TextView
            android:text="TextView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/ShowName_TV"
            android:textSize="26sp"
            android:layout_marginTop="18dp"
            android:maxWidth="230dp"
            android:layout_alignTop="@+id/PosterView"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="TextView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/Overview_TV"
            android:textSize="16sp"
            android:maxWidth="230dp"
            android:layout_below="@+id/ShowName_TV"
            android:layout_alignParentEnd="true"/>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/season_list"
            android:addStatesFromChildren="false"
            android:layout_height="332dp"
            android:layout_below="@+id/PosterView"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>